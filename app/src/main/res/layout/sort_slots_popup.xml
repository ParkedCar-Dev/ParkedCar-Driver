<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/quantum_grey200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_background"
        android:orientation="vertical"
        android:layout_margin="10sp"
        android:padding="22sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort Criteria"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/move_bold"
            android:layout_marginStart="10sp"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sort_criteria_radio_group"
            android:layout_marginStart="32sp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sort_by_distance"
                android:text="Distance"
                android:textSize="18sp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sort_by_fare"
                android:text="Fare"
                android:textSize="18sp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sort_by_rating"
                android:text="Rating"
                android:textSize="18sp"
                />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort Option"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/move_bold"
            android:layout_marginStart="10sp"
            android:layout_marginTop="12sp"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sort_option_radio_group"
            android:layout_marginStart="32sp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sort_by_ascending"
                android:text="Ascending"
                android:textSize="18sp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sort_by_descending"
                android:text="Descending"
                android:textSize="18sp"
                />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:paddingStart="32sp"
                android:paddingEnd="32sp"
                android:layout_gravity="center"
                android:id="@+id/sort_slots_button"
                android:text="Sort"
                android:textSize="18sp"
                android:backgroundTint="@color/teal_700"
                android:clickable="true"
                android:focusable="true"
                android:enabled="true"
                android:layout_marginRight="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:paddingStart="32sp"
                android:paddingEnd="32sp"
                android:layout_gravity="center"
                android:id="@+id/sort_cancel_button"
                android:text="Cancel"
                android:textSize="18sp"
                android:backgroundTint="@color/quantum_pink800"
                android:clickable="true"
                android:focusable="true"
                android:enabled="true"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>