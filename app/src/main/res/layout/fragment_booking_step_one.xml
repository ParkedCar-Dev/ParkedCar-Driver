<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/amita"
        android:gravity="center_horizontal"
        android:text="Select Date and Time"
        android:textSize="24sp"
        android:layout_marginBottom="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12sp"
        android:layout_marginTop="24sp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date: "
            android:fontFamily="@font/move_bold"
            android:textSize="18sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="30sp"
            android:layout_weight="2"
            android:elevation="8sp"
            android:layout_marginStart="10sp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/teal_700">

            <TextView
                android:id="@+id/start_date_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/move_bold"
                android:text="Select a Date"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:enabled="true"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12sp"
        android:layout_marginTop="24sp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time: "
            android:fontFamily="@font/move_bold"
            android:textSize="18sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="30sp"
            android:layout_weight="2"
            android:elevation="8sp"
            android:layout_marginStart="7sp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/teal_700">

            <TextView
                android:id="@+id/start_time_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/move_bold"
                android:text="Select a Time"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:enabled="true"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12sp"
        android:layout_marginTop="24sp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date: "
            android:fontFamily="@font/move_bold"
            android:textSize="18sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="30sp"
            android:layout_weight="2"
            android:elevation="8sp"
            android:layout_marginStart="20sp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/teal_700">

            <TextView
                android:id="@+id/end_date_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/move_bold"
                android:text="Select a Date"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:enabled="true"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12sp"
        android:layout_marginTop="24sp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time: "
            android:fontFamily="@font/move_bold"
            android:textSize="18sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="30sp"
            android:layout_weight="2"
            android:elevation="8sp"
            android:layout_marginStart="17sp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/teal_700">

            <TextView
                android:id="@+id/end_time_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/move_bold"
                android:text="Select a Time"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:enabled="true"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

