<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10FFFFFF" /> <!-- Transparent white background color -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>

    <!-- Border -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent color for interior -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Border color and width -->
            <corners android:radius="8dp" /> <!-- Corner radius (should match background) -->
        </shape>
    </item>

    <!-- Shadow -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#10000000" /> <!-- Shadow color -->
            <corners android:radius="8dp" /> <!-- Corner radius (should match background) -->
        </shape>
    </item>
</layer-list>


